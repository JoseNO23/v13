{
  "name": "storiesv13",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "prisma": "6.18.0"
  },
  "scripts": {
    "setup:env": "node scripts/prepare-env.mjs",
    "db:check": "node scripts/check-db.mjs",
    "db:validate": "pnpm exec prisma validate --schema apps/api/prisma/schema.prisma",
    "db:deploy": "pnpm exec prisma migrate deploy --schema apps/api/prisma/schema.prisma",
    "db:gen": "pnpm exec prisma generate --schema apps/api/prisma/schema.prisma",
    "db:status": "pnpm exec prisma migrate status --schema apps/api/prisma/schema.prisma"
  }
}
