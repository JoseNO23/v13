generator client {
  provider = "prisma-client-js"
}

// Nota: Este schema es válido para Prisma 6.18.0
// El warning sobre 'url' es un falso positivo de la extensión VS Code que valida con Prisma 7
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  AUTHOR
  USER
}

enum ProfileVisibility {
  PUBLIC
  PRIVATE
}

enum ImageType {
  THUMBNAIL
  BACKGROUND
  INLINE
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  passwordHash    String
  username        String?  @unique
  displayName     String?
  role            Role     @default(USER)
  bio             String?
  avatarKey       String?
  bannerKey       String?
  websiteUrl      String?
  discordTag      String?
  twitterUrl      String?
  instagramUrl    String?
  language        String   @default("es")
  theme           String   @default("dark")
  emailVerifiedAt DateTime?
  isBanned        Boolean  @default(false)
  bannedReason    String?
  lastLoginAt     DateTime?
  googleId        String?  @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  stories         Story[]
  emailTokens     EmailVerificationToken[]
  passwordTokens  PasswordResetToken[]
  privacy         UserPrivacy?
}

model UserPrivacy {
  userId            String            @id
  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  profileVisibility ProfileVisibility @default(PUBLIC)
  showBio           Boolean           @default(true)
  showWebsite       Boolean           @default(true)
  showDiscord       Boolean           @default(false)
  showTwitter       Boolean           @default(true)
  showInstagram     Boolean           @default(true)
  showEmail         Boolean           @default(false)
  showCreatedAt     Boolean           @default(true)
  showFavorites     Boolean           @default(false)
  showStats         Boolean           @default(true)
  showLastSeen      Boolean           @default(false)
  allowDMs          Boolean           @default(false)
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  stories     Story[]
}

model Story {
  id         String       @id @default(cuid())
  title      String
  content    String
  authorId   String
  categoryId String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  author     User         @relation(fields: [authorId], references: [id])
  category   Category?    @relation(fields: [categoryId], references: [id])
  images     StoryImage[]
}

model StoryImage {
  id        String     @id @default(cuid())
  url       String
  type      ImageType
  storyId   String
  createdAt DateTime   @default(now())

  story     Story      @relation(fields: [storyId], references: [id])
}

model EmailVerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  code      String?
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, code])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
