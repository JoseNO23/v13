{
    "name": "@storiesv13/api",
    "private": true,
    "scripts": {
        "start": "node dist/main.js",
        "start:dev": "nest start --watch",
        "build": "tsc -p tsconfig.build.json",
        "start:prod": "node dist/main.js",
        "prisma:generate": "cross-env PRISMA_GENERATE_SKIP_AUTOINSTALL=1 prisma generate --schema prisma/schema.prisma",
        "prisma:status": "prisma migrate status --schema prisma/schema.prisma",
        "prisma:deploy": "prisma migrate deploy --schema prisma/schema.prisma",
        "prisma:dev": "prisma migrate dev --schema prisma/schema.prisma",
        "prisma:validate": "prisma validate --schema prisma/schema.prisma"
    },
    "dependencies": {
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@prisma/client": "6.18.0",
        "@sendgrid/mail": "^8.1.3",
        "bcrypt": "^5.1.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.5",
        "jsonwebtoken": "^9.0.2",
        "nodemailer": "^6.9.14",
        "prisma": "6.18.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@types/bcrypt": "^5.0.2",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^22.19.3",
        "@types/nodemailer": "^6.4.14",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.0"
    }
}
